@keyframes accessibility-twinkling {
    50%{
        color:yellow;
    }
    51%{
        color:black;
    }
}



@keyframes qrfadein{
    0%{
        opacity:0;
    }
    100%{
        opacity:1;
    }
}

@keyframes qrfadeout{
    0%{
        opacity:1;
    }
    100%{
        opacity:0;
    }
}



#add,
#add_qr,
#add_secret,
#add_button,
#dropbox_get_code,
#dropbox_logout,
#dropbox_menu,
#download_backup,
#import_backup,
#upload_backup,
#security_save,
#passphrase_ok,
#security_remove,
#message_close,
#exportButton,
#popout {
    margin: 10px;
    padding: 20px;
    border: #CCC 1px solid;
    background: white;
    border-radius: 2px;
    position: relative;
    text-align: center;
    font-size: 16px;
    color: gray;
    cursor: pointer;
}

#popout {
  margin-top: 20px;
}

.buttons {
    text-align: center;
}

#confirm_ok,
#confirm_cancel {
    display: inline-block;
    margin: 10px;
    padding: 5px 20px;
    border: #CCC 1px solid;
    background: white;
    border-radius: 2px;
    position: relative;
    text-align: center;
    font-size: 16px;
    color: gray;
    cursor: pointer;
}

#message_close,
#add_button,
#exportButton,
#security_save,
#passphrase_ok,
#security_remove {
    font-size: 12px;
    margin: 20px 100px;
    padding: 10px;
    cursor: pointer;
}

#infoAction.hidden {
    display: none;
}

#menu .menuList p i.fa {
    font-size: 14px;
    display: line-block;
    width: 30px;
    display: flex;
    align-items: center;
}

#menuClose:hover,
#exportButton:hover,
#message_close:hover,
#add_button:hover,
#add_secret:hover,
#add_qr:hover,
#upload_backup:hover,
#download_backup:hover,
#import_backup:hover,
#editAction:hover,
#infoAction:hover,
#lock:hover,
#codes #add:hover,
#addAccountClose:hover,
#securityClose:hover,
#passphraseClose:hover,
#popout:hover,
#security_save:hover,
#passphrase_ok:hover,
#security_remove:hover,
#dropbox_get_code:hover,
#dropbox_logout:hover,
#dropbox_menu:hover,
#export:hover,
#confirm_cancel:hover,
#confirm_ok:hover,
#menu .menuList p:hover:after{
    color: black;
}

#exportData {
    height: 320px;
    width: 100%;
    word-break: break-all;
    resize: none;
    outline: none;
}

#dropbox_box input,
#secret_box input,
#security input,
#passphrase input {
    display: block;
    margin: 0 10px 10px 10px;
    padding: 10px;
    width: 260px;
    border: #CCC 1px solid;
    background: white;
    outline: none;
}

#dropbox_box input:disabled {
    background: #eee;
    cursor: not-allowed;
}

.checkbox_group input[type="checkbox"],
.radio_group input[type="radio"] {
    display: inline-block !important;
    width: auto !important;
}

.checkbox_group label,
.radio_group label {
    display: inline-block !important;
    margin-left: 0 !important;
}

#secret_box select {
    margin: 20px;
    font-size: 12px;
    padding: 5px;
}

#secret_box label,
#security label,
#passphrase label,
#security_warning,
#dropbox_risk,
#storage_location_info,
#storage_sync_info,
#export_info,
#passphrase_info {
    display: block;
    margin: 10px 0 0 10px;
}

#security_warning,
#export_info,
#dropbox_risk,
#storage_location_info,
#storage_sync_info,
#passphrase_info {
    color: gray;
}

#resize_list_label,
#storage_location_label,
#dropbox_encryption_label,
#dropbox_encryption,
#use_autofill_label,
#use_high_contrast_label,
#resize_list,
#storage_location {
    margin: 20px;
    font-size: 16px;
}

#storage_location {
  margin: 20px 20px 20px 0;
}

#download_backup,
#import_backup {
    text-decoration: none;
    color: gray;
    display: block;
}

#import_file {
    display: none;
}

#upload_backup {
    display: block;
}

.gu-mirror {
    display: none;
}



#dropbox_box .dropbox_code_input {
    width: 260px;
    margin: 0 10px 10px 10px;
    border: #CCC 1px solid;
    background: white;
    font-size: 0;
    height: 42px;
    display: grid;
    grid-template-columns: auto auto;
}

#dropbox_box .dropbox_code_input input {
    border: none;
    margin: 0;
    font-size: 12px;
    width: 188px;
    display: inline-block;
    height: 40px;
    padding: 0px 0px 0px 10px;
    vertical-align: top;
}

#dropbox_authorization {
    display: inline-flex;
    font-size: 12px;
    border-left: 1px solid #ccc;
    padding: 3px;
    text-decoration: none;
    text-align: center;
    overflow: hidden;
    vertical-align: top;
    margin: 7px 0;
    align-items: center;
    padding-left: 5px;
    color: gray;
}

#dropbox_authorization:hover {
    color: black;
}

#overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 900;
}

#token_input {
    margin: 10px;
    width: 260px;
    height: 50px;
    resize: none;
    padding: 5px;
    border: 1px solid #ccc;
}

